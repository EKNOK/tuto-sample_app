<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>No Attack</h1>
    <h1>No Chance</h1>
    <h2>
      This is server test
      <a href="https://aws.amazon.com/jp/">AWS</a> &
      <a href="https://cloud.google.com/?hl=ja">GCP</a>
       app .
    </h2>
    <%= link_to "Sign up !", signup_path, class: "home-signup" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo"), "https://rubyonrails.org/" %>
<% end %>
